---
const headingOptions = {
    h1: "xxl",
    h2: "xl",
    h3: "lg",
    h4: "md",
    h5: "sm",
    h6: "xs"
};

//typescript so tagName and size has to === one of the headingOptions

type Props ={
    tagName: keyof typeof headingOptions;
    size: keyof typeof headingOptions;
}

// deconstructing Astro.props
const { tagName, size } = Astro.props;

//making the Tag
const Tag = tagName;
---
<Tag class:list={["default", headingOptions[size]]}>
    <slot></slot>
</Tag>
<style>
    .default{
        line-height: 1.1;
    }
    .xxl{
        font-size: var(--fs-2xl);
    }
    .xl{
        font-size: var(--fs-xl);
    }
    .lg{
        font-size: var(--fs-lg);
    }
    .md{
        font-size: var(--fs-md);
    }
    .sm{
        font-size: var(--fs-sm);
    }
    .xs{
        font-size: var(--fs-xs);
    }
</style>