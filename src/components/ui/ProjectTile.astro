---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import Heading from './Heading.astro';
import { Icon } from 'astro-icon/components';
import { getEntries } from 'astro:content';

// ts. data needs to be things in projects collection and the data object
type Props ={
    data: CollectionEntry<"projects">["data"];
}

const {data} = Astro.props;

// break out each field from "data"
const {title, url, icons, thumbnail} = data;

// get iconData from the destructured data.icons
const iconData = await getEntries(icons);
---

<article aria-lable={title} class="project-tile">
    <a href={url}>
       <Image src={thumbnail} alt={title} width={400} format="avif"></Image>
       <div class="content">
            <div class="columns">
                <Heading tagName="h3" size="h4">{title}</Heading>
                <Icon name="icon--external-link" size={25}/>
            </div>    
            <ul>
                {
                    iconData.map(({data})=>
                    <li>
                    <Icon name={data.icon}title={data.icon}></Icon>
                    </li>
                )
                }
            </ul>
        </div> 
    </a>    
</article>