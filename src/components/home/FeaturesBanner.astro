---
// astro tools
import { getCollection } from "astro:content";
import { Icon } from "astro-icon/components";

// components
import Heading from "../ui/Heading.astro";
// import { Icon } from "astro-icon/components";

// conent colelctions
const features = await getCollection("features");
// console.log(features);
---
<section aria-label="Features Banner" class="features">
    <div>
        <Heading tagName="h2" size="h2">I build fast sleak modern websites.</Heading>
        <ul>
            {features.map(({data}) => (
                <li>
                    <Icon name={data.icon} size={64}></Icon>
                    <Heading tagName="h3" size="h3">{data.title}</Heading>
                    <p>{data.description}</p>
                </li>
            ))}
        </ul>
    </div>
</section>